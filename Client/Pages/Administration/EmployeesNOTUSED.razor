@inject NavigationManager navMan;

@page "/add"

<div class="page-container">
    <div class="top-bar">
        <div class="title">Mentor og elever</div>
        <div class="right-section">
            <div class="button-row">
                <button class="button">Tildel mentor</button>
                <button class="button">Tilføj mentor</button>
                <button @onclick="NavigateToCreate" class="button button-primary">Opret elev</button>
            </div>
        </div>
        <input class="search-bar" type="text" @bind="searchText" @bind:event="oninput" placeholder="Søg efter personer eller teams..." />
    </div>

    <div class="section">
        <h2 class="section-header">Mentorer</h2>
        <div class="cards-section">
            <div class="card">
                <div class="card-circle">MH</div>
                <div class="card-name">Maria Hansen</div>
                <div class="card-detail">Hotel: Marriott</div>
            </div>
            <div class="card">
                <div class="card-circle">LP</div>
                <div class="card-name">Lars Petersen</div>
                <div class="card-detail">Hotel: Scandic</div>
            </div>
        </div>
    </div>

    <div class="section">
        <h2 class="section-header">Elever</h2>
        <div class="cards-section">
            <div class="card">
                <div class="card-circle">JS</div>
                <div class="card-name">Julie Sørensen</div>
                <div class="card-detail">Hotel: Cabinn</div>
            </div>
            <div class="card">
                <div class="card-circle">KT</div>
                <div class="card-name">Kasper Thomsen</div>
                <div class="card-detail">Hotel: Wakeup</div>
            </div>
        </div>
    </div>
</div>

@code {
    private string searchText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        
    }

    private void NavigateToCreate()
    {
        navMan.NavigateTo("opretbruger");
    }

}